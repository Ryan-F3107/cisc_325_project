<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cisc_325_project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.JoinMe.AddContact"></activity>
        <activity android:name="com.example.JoinMe.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.JoinMe.Chat" />
        <activity
            android:name="com.example.JoinMe.CreateEvent"
            android:label="Create Event"
            android:parentActivityName="com.example.JoinMe.EventList">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.JoinMe.EventList" />
        </activity>
        <activity
            android:name="com.example.JoinMe.Profile"
            android:label="Profile"
            android:parentActivityName="com.example.JoinMe.Home">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.JoinMe.Home" />
        </activity>
        <activity android:name="com.example.JoinMe.EventDetails" />
        <activity
            android:name="com.example.JoinMe.EventList"
            android:label="Events"
            android:parentActivityName="com.example.JoinMe.Home">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.JoinMe.Home" />
        </activity>
        <activity
            android:name="com.example.JoinMe.statusSelectionActivity"
            android:label="Status"
            android:parentActivityName="com.example.JoinMe.Home">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.JoinMe.Home" />
        </activity>
        <activity
            android:name="com.example.JoinMe.Home"
            android:parentActivityName="com.example.JoinMe.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.JoinMe.MainActivity" />
        </activity>
    </application>

</manifest>